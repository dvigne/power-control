{
  "name": "power-control",
  "version": "1.0.0",
  "description": "Electron App for Controlling Siglent SPD3303 XE Power Supply over the VXI Network Protocol",
  "main": "src/js/app/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron-forge start",
    "package": "npm run dev && electron-forge package",
    "make": "npm run prod && npm run makelinux && npm run makemac && npm run makewin",
    "makelinux": "electron-forge make",
    "makemac": "electron-forge make -p darwin",
    "makewin": "electron-forge make -p win32",
    "clean": "rm -R -v -f out/*",
    "dev": "export NODE_OPTIONS=--openssl-legacy-provider && mix",
    "prod": "export NODE_OPTIONS=--openssl-legacy-provider && mix -p",
    "watch": "export NODE_OPTIONS=--openssl-legacy-provider && mix watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dvigne/power-control.git"
  },
  "author": "Derick Vigne",
  "license": "GPLv3",
  "bugs": {
    "url": "https://github.com/dvigne/power-control/issues"
  },
  "homepage": "https://github.com/dvigne/power-control#readme",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.61",
    "@electron-forge/maker-deb": "^6.0.0-beta.61",
    "@electron-forge/maker-rpm": "^6.0.0-beta.61",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.61",
    "@electron-forge/maker-zip": "^6.0.0-beta.61",
    "autoprefixer": "^10.3.7",
    "browser-sync": "^2.27.5",
    "browser-sync-webpack-plugin": "^2.3.0",
    "electron": "^15.3.0",
    "electron-reload": "^2.0.0-alpha.1",
    "install": "^0.13.0",
    "laravel-mix": "^6.0.34",
    "net": "^1.0.2",
    "npm": "^8.1.1",
    "postcss": "^8.3.11",
    "resolve-url-loader": "^4.0.0",
    "sass": "^1.43.3",
    "sass-loader": "^12.2.0",
    "tailwindcss": "^2.2.17",
    "vue": "^2.6.14",
    "vue-loader": "^15.9.8",
    "vue-template-compiler": "^2.6.14"
  },
  "dependencies": {
    "chokidar": "^3.5.2",
    "electron-squirrel-startup": "^1.0.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "power_control"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
